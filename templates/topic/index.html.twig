{% extends 'base.html.twig' %}

{% block title %}Hello TopicController!{% endblock %}

{% block body %}

    <button class="single_button"> <a href="/topic/add"> ADD </a> </button>
    <ul>
        {% for item in topics %}
        <li>
            <span> <a href="/topic/list/{{ item.id }}"> {{ item.name }} </a> </span>
            <span> {{ item.duration }} hours </span>
        </li>
        {% endfor %}
    </ul>

{% endblock %}
